<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-100 m-0 p-0">
		<div class="bg-white h-16 flex items-center">
			<header class="flex justify-between container max-w-6xl mx-auto">

				<h1><span class="font-bold text-blue-600">H.</span><span>Phone</span></h1>
				<menu>
					<ul class="flex space-x-5">
						<li class="inline"><a href="#" class="text-blue-600 border-b-2 border-blue-600 border-dotted">Home</a></li>
						<li class="inline"><a href="#">Shop</a></li>
						<li class="inline"><a href="#">Product</a></li>
						<li class="inline"><a href="#">Blog</a></li>
						<li class="inline"><a href="#">Contact</a></li>
					</ul>
				</menu>
				<div class=" flex space-x-2">
					<Icon name="mdi:cart-outline" />
					<Icon name="mdi:search" />
					<Icon name="mdi:account" />
				</div>
			</header>
		</div>

		<div class="p-5 bg-white rounded-xl shadow-md shadow-slate-200 mt-6 max-w-6xl container mx-auto">
		
			<div class="grid grid-cols-2 mt-10">
				<div class=" h-64 w-64 bg-[url(https://as-images.apple.com/is/MME73_AV2?wid=1000&hei=1000&fmt=jpeg&qlt=95&.v=1632861338000)]
				bg-[length:120%_120%] bg-center mx-auto">
